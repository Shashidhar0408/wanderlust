<% layout('/layouts/boilerplate') -%>

<body>
     <div class="row mt-3s">
          <div class="col-8 offset-3">
               <h3><%= listing.title %></h3>
          </div>
     </div>
     <div class="card col-6 offset-3 show-card  listing-card">
          <img src="<%= listing.image %>" class="card-img-top show-img" alt="Image of <%= listing.title %>">
          <div class="card-body">
            <p class="card-text">
                <%= listing.description %> <br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
          </div>
     </div>
     <br>
     <div class="btns">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
          <form method="post" action="/listings/<%= listing._id %>?_method=delete">
               <button class="btn btn-dark offset-5">Delete</button>
          </form>
     </div>
     <hr>
     <div class="col-8 offset-3 mb-34">
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation">
               <div class="mb-3 mt-3"></div>
               <div>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
               </div>
               <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">comments</label>
                    <textarea required name="review[comment]" id="comment" cols="30" rows="5" class="form-control" ></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
               </div>
               <button class="btn btn-outline-dark">Submit</button> </form>
          <hr>
<p> <b>All Reviews </b></p>
<div class="row">
     <%for(review of listing.reviews){ %>
          <div class="card col-5 ms-3 mb-3">
<div class="card-body">
     <h5 class="card-title"> Jane Doe</h5>
     <p class="card-text"> <%= review.comment %> </p>
     <p  class="card-text"> <%= review.rating %>stars</p>
</div>
<br>

<!-- DELETE FORM  -->
  <!-- Delete Form -->
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="col-6 offset-3 mb-3">
     <button type="submit" class="btn btn-danger w-100">Delete</button>
   </form>
               </div>
          <% } %>
     </div>
</div>
</body>